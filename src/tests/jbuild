(jbuild_version 1)

(executable
  ((name tests)
   (libraries (containers witan.core witan.theories.bool witan.theories.LRA oUnit witan.solver))
   (flags (:standard -w +a-4-42-44-48-50-58-32-60-9@8 -color always))
   (ocamlopt_flags (:standard -O3
                    -unbox-closures -unbox-closures-factor 20))
  ))

(alias
 ((name    runtest)
  (deps    (tests.exe
            (files_recursively_in solve/)
  ))
  (action  (run ${<}))))
