(jbuild_version 1)

; main binary
(executable
  ((name main)
   (public_name witan)
   (libraries (containers witan_open witan_core
               witan.theories.LRA
               witan.theories.ite
               witan.theories.arrays
               witan.theories.bitvectors
   ))
   (flags (:standard -w +a-4-42-44-48-50-58-32-60@8 -color always -open "Witan_open.Open"))
   (ocamlopt_flags (:standard -O3 -color always
                    -unbox-closures -unbox-closures-factor 20))
  ))

(alias
 ((name    runtest)
  (deps    (tests/test.exe))
  (action  (run ${<}))))
